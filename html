    <script>
        // JavaScript code for Network Scanner
        document.getElementById('submit-button').addEventListener('click', function() {
            var commandInput = document.getElementById('command-input').value;
            // Implement your network scanning logic here
            // For demonstration purposes, let's just display the entered command
            var terminalContent = document.getElementById('terminal-content');
            var newCommand = document.createElement('p');
            newCommand.textContent = '> ' + commandInput;
            terminalContent.appendChild(newCommand);
            document.getElementById('command-input').value = ''; // Clear input field
        });
